<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_notifications"
                android:layout_marginEnd="12dp"
                android:contentDescription="Notifications"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Preferences"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />
        </LinearLayout>

        <!-- Daily Check-in Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fixed: Use fully qualified class name to avoid ambiguity -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Daily Check-in Reminders"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminds you to check in with your mood each day"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Meditation Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_meditation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Meditation Reminders"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifies you of scheduled meditation sessions"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Journal Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_journal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Journal Entry Reminders"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Encourages you to write journal entries regularly"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Wellness Tips &amp; Updates"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Receive helpful wellness tips and app updates"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Notification Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Notifications"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Test Notification"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_notifications"
            app:iconGravity="textStart"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can change these settings at any time."
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
